<div class="roulette-game-container">
  <header class="text-center mb-30">
    <h1 class="roulette-title">Mesa de Ruleta Europea</h1>
    <div class="game-status betting">
      <div>Estado: <strong>Recibiendo Apuestas</strong></div>
    </div>
  </header>

  <div class="metrics-grid mb-20">
    <div class="metric-card">
      <h2>Saldo Disponible</h2>
      <div id="saldo-actual" class="metric-value">${{user.saldo}}</div>
    </div>
    <div class="metric-card">
      <h3>Apuesta Total</h3>
      <div id="apuesta-actual" class="metric-value">$0</div>
    </div>
    <div class="metric-card">
      <h3>Ganancia Potencial</h3>
      <div id="ganancia-potencial" class="metric-value">$0</div>
    </div>
  </div>

  <div class="roulette-wrap">
    <div class="pointer" aria-hidden="true"></div>
    <div id="wheel" class="wheel" role="img" aria-label="Ruleta europea"></div>
  </div>

  <div class="roulette-controls">
    <input type="number" id="numeroInput" placeholder="Número (0-36)" />
    <input type="number" id="montoInput" placeholder="Monto $" />
    <button id="apostarBtn">Apostar</button>
    
    <button id="spinBtn" class="spin-btn">GIRAR RULETA</button>
    <div id="status" class="roulette-status" aria-live="polite">
      Haz tu apuesta para comenzar
    </div>
  </div>

  <div class="last-numbers">
    <h3>Últimos Números Ganadores</h3>
    <ul id="winning-numbers-list" class="winning-numbers-ui">
    </ul>
  </div>

  <div class="last-numbers">
    <h3>Mis Últimas Apuestas (Historial)</h3>
    <ul>
      {{#each apuestas}}
        <li>Número: {{this.numero}} — Monto: ${{this.monto}} — Fecha: {{this.fecha}}</li>
      {{else}}
        <li>No has realizado apuestas.</li>
      {{/each}}
    </ul>
  </div>

  <section class="card text-center mt-30">
    <h2>Controles de Juego</h2>
    <div class="controls-grid">
      <a href="/perfil" class="bn-login">Volver al Perfil</a>
      <a href="/transacciones" class="bn-register">Hacer Transacción</a>
    </div>
  </section>
</div>

<script src="/ruleta.js"></script>