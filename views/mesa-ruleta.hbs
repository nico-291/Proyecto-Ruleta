<div class="metrics-grid mb-20">
  <div class="metric-card">
    <h2>Saldo Disponible</h2>
    <div id="saldo-actual" class="metric-value">${{user.saldo}}</div>
  </div>
    <div class="metric-card">
    <h3>Apuesta Total</h3>
    <div id="apuesta-actual" class="metric-value">$0</div>
    </div>
      <div class="metric-card">
       <h3>Ganancia Potencial</h3>
       <div id="ganancia-potencial" class="metric-value">$0</div>
      </div>
  </div>

<div class="card text-center mb-20">
  <h2>Selecciona tu Ficha</h2>
  <div id="chip-selector" class="chip-selector">
   <button class="chip-btn selected" data-value="1">1</button>
   <button class="chip-btn" data-value="5">5</button>
   <button class="chip-btn" data-value="25">25</button>
   <button class="chip-btn" data-value="100">100</button>
  </div>
</div>

<div class="roulette-layout">        
  <div class="roulette-wheel-area card">
  <div class="roulette-wrap">
  <div class="pointer" aria-hidden="true"></div>
  <div id="wheel" class="wheel" role="img" aria-label="Ruleta europea"></div>
  </div>        
    <div class="roulette-controls mt-20">
      <button id="spinBtn" class="spin-btn" disabled>GIRAR RULETA</button>
      <button id="clearBetsBtn">Limpiar Apuestas</button>
    </div>
            
    <div id="status" class="roulette-status" aria-live="polite">
      Haz tu apuesta para comenzar
    </div>

  <div class="last-numbers mt-20">
    <h3>Últimos Números Ganadores</h3>
    <ul id="winning-numbers-list" class="winning-numbers-ui"></ul>
  </div>
  </div>

<div class="betting-table-container">
  <div class="betting-table">
  <div class="zero-bet">
  <div class="bet-cell zero" data-bet-type="number" data-bet-value="0">0</div>
  </div>
  
<div class="number-grid-container">
  <div class="number-grid"></div>
  <div class="dozen-bets">
  <div class="bet-cell outside" data-bet-type="dozen" data-bet-value="1">1st 12</div>
  <div class="bet-cell outside" data-bet-type="dozen" data-bet-value="2">2nd 12</div>
  <div class="bet-cell outside" data-bet-type="dozen" data-bet-value="3">3rd 12</div>
  </div>
<div class="outside-bets">
  <div class="bet-cell outside" data-bet-type="outside" data-bet-value="1-18">1-18</div>
  <div class="bet-cell outside" data-bet-type="outside" data-bet-value="even">PAR</div>
  <div class="bet-cell outside red" data-bet-type="outside" data-bet-value="red">♦</div>
  <div class="bet-cell outside black" data-bet-type="outside" data-bet-value="black">♦</div>
  <div class="bet-cell outside" data-bet-type="outside" data-bet-value="odd">IMPAR</div>
  <div class="bet-cell outside" data-bet-type="outside" data-bet-value="19-36">19-36</div>
</div>
</div>
   </div>
</div>
  </div>

<script src="/ruleta.js" defer></script>